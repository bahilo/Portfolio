@model DagoWebPortfolio.Models.DisplayViewModel.DisplayViewModel


@{
    ViewBag.Title = "DISPLAY";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-list-alt"></i> @ViewBag.Title</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="/Admin/index">Home</a></li>
            <li><i class="fa fa-eye"></i>@ViewBag.From</li>
            <li><i class="fa fa-briefcase"></i>@ViewBag.Action</li>
        </ol>
    </div>
</div>

<p>
    @Html.ActionLink("Create New", "Create/New/toto")
</p>

<div class="panel">
    <div class="panel-heading">
    </div>
    <div class="panel-body">
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>DisplayViewModel</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.lang)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.lang)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>
    </div>
</div>
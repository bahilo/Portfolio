        <div class="col-md-9">
            @Html.EditorFor(model => Model.Client, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => Model.Client, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => Model.Date, htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-2">
            @Html.EditorFor(model => Model.Date, new { htmlAttributes = new { @class = "form-control col-md-1" } })
            @Html.ValidationMessageFor(model => Model.Date, "", new { @class = "text-danger" })
        </div>        
    </div>

</p>

@model DagoWebPortfolio.Models.DisplayViewModel.DisplayViewWelcome

@{
    ViewBag.Title = "DisplayViewWelcome";
}


<input type="hidden" name="origineFileWelcome" value="@Html.DisplayFor(model => model.FileName)" />
<input type="hidden" name="welcomeID" value="@Html.DisplayFor(model => model.ID)" />

<div class="form-group">
    @Html.LabelFor(model => Model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => Model.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => Model.Name, "", new { @class = "text-danger" })
    </div>
</div>

<!-- File upload -->

<div class="form-group">
    <div class="control-label col-md-2">
        File
    </div>
    <div class="col-md-4">
        <input id="ImagePathWelcome" title="Upload a project image" type="file" name="fileWelcome" />
    </div>
    <div class="col-md-4">
        <img style="height:100px;width:100%;" src="@Html.DisplayFor(model=>model.Path)@Html.DisplayFor(model=>model.FileName)" />
    </div>
</div>




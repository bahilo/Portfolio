    ViewBag.AboutHeadZone1 = (ViewBag.Display != null) ? ViewBag.Display.AboutView.HeadZone1 : "Head Zone 1";
    ViewBag.AboutHeadZone2 = (ViewBag.Display != null) ? ViewBag.Display.AboutView.HeadZone2 : "Head Zone 2";
    ViewBag.AboutHeadZone3 = (ViewBag.Display != null) ? ViewBag.Display.AboutView.HeadZone3 : "Head Zone 3";

}  

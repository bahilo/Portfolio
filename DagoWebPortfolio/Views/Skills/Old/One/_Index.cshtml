@model IEnumerable<DagoPortfolioWeb.Models.SkillsViewModel>

@{
    Layout = "";
    ViewBag.Title = "Index";
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<h2>Skills</h2>

<div class="skills">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <h2><strong>Coding</strong></h2>
            </div>
        </div>
        <div class="row coding">

            <div class="col-md-4">
                @foreach (var item in Model)
                {
                    <dt>
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => item.Title)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => item.Description)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Levels.Max().Level)
                    </dt>



                    <div class="circleGraphic1 col-md-3 col-sm-6">@Html.DisplayFor(model => item.Levels.Max().Level)</div>
                    

                }
            </div>

        </div>
        <div class="row business">
            <div class="col-md-4 col-md-offset-4">
                <h2><strong>Business</strong></h2>
            </div>
        </div>
        <div class="row others">
            <div class="col-md-4 col-md-offset-4">
                <h2><strong>Others</strong></h2>
            </div>
        </div>

    </div>
</div>



<script type="text/javascript">
    $(document).ready(function () {
        $('.circleGraphic1').circleGraphic({ 'color': '#c1fc2f' });

    });
</script>


    <script type="text/javascript">
        $(document).ready(function () {
            var param = 0;
            var value = 0;
            var name = "";
            var listColor = ['#33f5fe', '#E53238', '#7F677F', '#c1fc2f', '#88E000'];
            $("canvas[id^=demo]").each(function () {                
                value = $(this).attr("property");
                name = $(this).attr("name");
                param = value / 100;
                $(this).waterbubble({

                    // bubble size
                    radius: 100,

                    // border width
                    lineWidth: undefined,

                    // data to present
                    data: param,

                    // color of the water bubble
                    waterColor: listColor[Math.floor(Math.random() * listColor.length)],//'rgba(25, 139, 201, 1)',

                    // text color
                    textColor: 'rgba(06, 85, 128, 0.8)',

                    // custom font family
                    font: '',

                    // show wave
                    wave: true,

                    // custom text displayed inside the water bubble
                    txt: value + "%",

                    // enable water fill animation
                    animation: true

                });
            });
            
            
            
            
            //alert(param);
            

        });
    </script>


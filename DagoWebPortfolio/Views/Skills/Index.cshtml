@model IEnumerable<DagoWebPortfolio.Models.SkillsViewModel>

@{
    ViewBag.Title = "Index";
} 


    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Experiences)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Projects)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @foreach (var experience in item.Experiences)
                {
                    <table>
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => experience.Title)
                            </td>
                        </tr>
                    </table>
                } 
                </td>
                <td>
                    @foreach (var project in item.Projects)
                    {
                        <table>
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => project.Title)
                                </td>
                            </tr>
                        </table>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>

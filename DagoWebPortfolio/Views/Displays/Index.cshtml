@model IEnumerable<DagoWebPortfolio.Models.DisplayViewModel.DisplayViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.lang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AboutView.HeadZone1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WelcomeView.Zone1)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.lang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AboutView.HeadZone1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WelcomeView.Zone1)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>

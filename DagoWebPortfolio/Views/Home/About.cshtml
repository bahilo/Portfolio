@using DagoWebPortfolio.Models.CustomHelpers 
@{
    ViewBag.Title = "ABOUT ME";
    Layout = "";


    ViewBag.AboutBodyZone1 = (@ViewBag.Display != null) ? @ViewBag.Display.AboutView.BodyZone1 : "Body Zone 1";
    ViewBag.AboutBodyZone2 = (@ViewBag.Display != null) ? @ViewBag.Display.AboutView.BodyZone2 : "Body Zone 2";
    ViewBag.AboutBodyZone3 = (@ViewBag.Display != null) ? @ViewBag.Display.AboutView.BodyZone3 : "Body Zone 3";
    ViewBag.AboutBodyZone4 = (@ViewBag.Display != null) ? @ViewBag.Display.AboutView.BodyZone4 : "Body Zone 4";
    ViewBag.AboutBodyZone5 = (@ViewBag.Display != null) ? @ViewBag.Display.AboutView.BodyZone5 : "Body Zone 5";

    ViewBag.AboutPictureUrl = (@ViewBag.Display != null && ViewBag.Display.AboutView.FileName != null) ? @ViewBag.Display.AboutView.Path + @ViewBag.Display.AboutView.FileName : "Image File";
    ViewBag.AboutMe = (ViewBag.Display != null) ? ViewBag.Display.AboutView.Name : "Name Zone";
}
<!--<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>-->
 
<div class="about-me">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <div class="title">
                            <h1 class="text">@ViewBag.Title</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="divider"></div>

    <div class="container">
        <div class="col-sm-10 col-sm-offset-1">
            
            <div class="page-header text-center"> 
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <img class="picture-home" alt="Me" src="@ViewBag.AboutPictureUrl" />
                    </div>
                </div>
            </div>
             <!---->
            <hr>

            <h3 class="text-center title">
                @Html.DisplayHtml((string)ViewBag.AboutBodyZone1)
            </h3>

            <hr>

            <div class="divider"></div>

        </div>
    </div>


    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <h1>Profile</h1>
            <div class="row">
                <div class="col-md-4">
                    <h3><span class="glyphicon glyphicon-send"></span>Ambition</h3>
                    @Html.DisplayHtml((string)ViewBag.AboutBodyZone2)
                </div>
                <div class="col-md-4">
                    <h3><span class="glyphicon glyphicon-retweet"></span>Motivation</h3>
                    @Html.DisplayHtml((string)ViewBag.AboutBodyZone3)
                </div>
                <div class="col-md-4">
                    <h3><span class="glyphicon glyphicon-ok-sign"></span>Quality</h3>
                    @Html.DisplayHtml((string)ViewBag.AboutBodyZone4)
                </div>
            </div>


            <div class="divider"></div>

        </div><!--/col-->
    </div><!--/container-->


    <div class="divider" id="section4"></div>
    <div class="row">
        <div class="col-md-8 col-md-offset-1">
        </div>
    </div>

    <div class="row">
    
        <hr>

        <div class="col-sm-8"></div>
        <div class="col-sm-3 pull-right">
            <address>
                @Html.DisplayHtml((string)ViewBag.AboutMe)<br>
                <span id="map-input">
                    @Html.DisplayHtml((string)ViewBag.AboutBodyZone5)
                </span>
            </address>

            <address>
                <strong>Email Me</strong><br>
                <a href="mailto:#">eric.dago.225@gmail.com</a>
            </address>
        </div>

    </div><!--/row-->

</div>

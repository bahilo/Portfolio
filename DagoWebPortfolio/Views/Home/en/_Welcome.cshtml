@*@using MVCThemes.Extensions;*@
@using DagoWebPortfolio.Models.CustomHelpers 
@model DagoWebPortfolio.Models.PicturesViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_WelcomePageLayout.cshtml";
} 

    <div class="container"> 
        <div class="row">
            <div class="col-md-8 col-md-offset-2 vcenter-welcome-page">
                <div class="jumbotron animated  rotateInUpLeft">
                    <div class="intro">                        
                            @if (!string.IsNullOrEmpty(Model.FileName))
                            {
                                string fullPath = Model.path + Model.FileName;
                                <div class="row">
                                    <div class="col-md-6 col-md-offset-3">
                                        <p class="picture"><img alt="Me" src="@fullPath" /></p>
                                    </div>
                                </div>
                            }
                               
                        <div class="row">
                            <div class="col-md-10 col-md-offset-1">
                                <h2>Hi, I'm Eric</h2>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8 col-md-offset-2">
                                <p>Welcome to my Portfolio</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 col-md-offset-4">
                                <p><a href="/Home/Index">Learn More</a></p>
                            </div>
                        </div>
                        <!--<p class="home-link">@Html.ActionLink("Learn More", "Index", "Home")</p>-->
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">

        function resetFormError() {
            var errorName = document.getElementById("NameError");
            errorName.style.display = "none";

            var errorCompany = document.getElementById("CompanyError");
            errorCompany.style.display = "none";

            var errorEmail = document.getElementById("EmailError");
            errorEmail.style.display = "none";
        }

        resetFormError();

        function validateForm() {
            var errorDetected = "";
            resetFormError();
            var name = document.forms["contactForm"]["Name"].value;
            if (name == "") {
                var errorName = document.getElementById("NameError");
                errorName.innerHTML = "Please give a name.";
                errorName.style.display = "block";
                errorDetected += "name;";
            }

            var company = document.forms["contactForm"]["Company"].value;
            if (company == "") {
                var errorCompany = document.getElementById("CompanyError");
                errorCompany.innerHTML = "Please give organization or company name.";
                errorCompany.style.display = "block";
                errorDetected += "company;";
            }

            var email = document.forms["contactForm"]["Email"].value;
            if (email == "") {
                var errorEmail = document.getElementById("EmailError");
                errorEmail.innerHTML = "Please give an email.";
                errorEmail.style.display = "block";
                errorDetected += "email;";
            }

            if (errorDetected == "")
                return true;
            else
                return false;

        }

    </script>
